<div class="row my-5">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <h2> Projects</h2>
        <% data.projects.each do |project| %>
          <div data-aos="fade-right">
            <div class="project-container">
              <div class="project-image">
                <%= image_tag project.image, alt: "project image" %>
              </div>
              <div class="project-info w-100">
                <h2><%= project.name %></h2>
                <p><strong>Role:</strong> <%= project.role %></p>
                <p><strong>Stacks:</strong> <em><%= project.stacks %></em></p>
                <p><%= project.description %></p>
                <a class="project-link" href="<%= project.url %>"><span>View Site</span></a>
              </div>
            </div>
            <div class='bottom-border'></div>
          </div>
          <% end %>
        </div>
    </div>
  </div>
</div>

<script>
  AOS.init();
</script>
